{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        },
        "outDir": "dist/",
        "resolveJsonModule": true,
        "target": "esnext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "backup",
        "backup_js",
        "logs",
        "node_modules",
        "package.json",
        "package-lock.json"
    ]
}
